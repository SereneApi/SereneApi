<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Product>SereneApi</Product>
    <Company>DeltaWare</Company>
    <Authors>Bradley Clarke</Authors>
    <Version>6.0.0.1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
      <PackageOutputPath>..\..\nuget.packages</PackageOutputPath>
    <PackageIcon>nuget_logo.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryType>GIT</RepositoryType>
    <RepositoryUrl>https://github.com/SereneApi/SereneApi</RepositoryUrl>
    <PackageProjectUrl>https://www.sereneapi.org/</PackageProjectUrl>
    <NeutralLanguage>en-AU</NeutralLanguage>
    <PackageTags>SereneApi; API</PackageTags>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DeltaWare.Dependencies" Version="6.0.0.1" />
    <PackageReference Include="DeltaWare.SDK.Core" Version="6.0.0.1" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\nuget_logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>  
    
    <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
